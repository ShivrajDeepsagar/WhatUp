
<% @routines.each do |routine| %>
  <div class="routine row clearfix">
    <h2>
      <a><%= link_to routine.title, routine %></a><br>
      <small class="author">Submitted <%= time_ago_in_words(routine.created_at) %> by <%= routine.user.email %></small>
    </h2>
    <div class="btn-group">
      <%= link_to like_routine_path(routine), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Like
        <%= routine.get_upvotes.size %>
      <% end %>
      <%= link_to unlike_routine_path(routine), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Unlike
        <%= routine.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>
